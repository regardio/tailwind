{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "@regardio/tailwind",
  "version": "0.3.7",
  "description": "Regardio Tailwind CSS utilities and configuration",
  "keywords": ["tailwind", "tailwindcss", "utilities", "regardio"],
  "homepage": "https://github.com/regardio/tailwind#readme",
  "bugs": {
    "url": "https://github.com/regardio/tailwind/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regardio/tailwind.git"
  },
  "license": "MIT",
  "author": "Bernd Matzner <bernd.matzner@regard.io>",
  "type": "module",
  "exports": {
    "./styles": "./dist/styles/index.css",
    "./styles/*": "./dist/styles/*",
    "./utils": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "fix": "exec-s fix:pkg fix:md fix:biome",
    "fix:biome": "lint-biome check --write --unsafe .",
    "fix:md": "lint-md --fix",
    "fix:pkg": "lint-package --fix",
    "flow:hotfix": "flow-hotfix",
    "flow:release": "flow-release",
    "flow:ship": "flow-ship",
    "lint": "exec-s lint:md lint:biome",
    "lint:biome": "lint-biome check .",
    "lint:md": "lint-md",
    "lint:pkg": "lint-package",
    "prepare": "exec-husky",
    "report": "vitest run --coverage",
    "test": "exec-s test:*",
    "test:unit": "vitest run",
    "tsdown": "tsdown",
    "typecheck": "exec-tsc --noEmit"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "fluid-tailwindcss": "1.0.9",
    "tailwind-merge": "3.5.0",
    "tailwind-variants": "3.2.2",
    "tw-animate-css": "1.4.0"
  },
  "devDependencies": {
    "@regardio/dev": "1.14.3",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "25.3.1",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "tailwindcss": "4.2.1",
    "tsdown": "0.20.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
