{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "@regardio/tailwind",
  "version": "0.3.1",
  "description": "Regardio Tailwind CSS utilities and configuration",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "utilities",
    "regardio"
  ],
  "homepage": "https://github.com/regardio/tailwind#readme",
  "bugs": {
    "url": "https://github.com/regardio/tailwind/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regardio/tailwind.git"
  },
  "license": "MIT",
  "author": "Bernd Matzner <bernd.matzner@regard.io>",
  "type": "module",
  "exports": {
    "./styles": "./dist/styles/index.css",
    "./styles/*": "./dist/styles/*",
    "./utils": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && pnpm fix",
    "dev": "tsdown --watch",
    "fix": "exec-p fix:*",
    "fix:biome": "lint-biome check --write --unsafe .",
    "fix:md": "lint-md --fix",
    "fix:pkg": "lint-package --fix",
    "lint": "exec-p lint:*",
    "lint:biome": "lint-biome check .",
    "lint:md": "lint-md",
    "lint:pkg": "lint-package",
    "prepare": "exec-husky",
    "release": "flow-release",
    "report": "vitest run --coverage",
    "test": "exec-s test:*",
    "test:unit": "vitest run",
    "typecheck": "exec-tsc --noEmit",
    "version": "flow-changeset version"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "fluid-tailwindcss": "1.0.5",
    "tailwind-merge": "3.4.0",
    "tailwind-variants": "3.2.2",
    "tw-animate-css": "1.4.0"
  },
  "devDependencies": {
    "@regardio/dev": "1.12.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "25.0.9",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "tailwindcss": "4.1.18",
    "tsdown": "0.20.0-beta.3",
    "vitest": "4.0.17"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
