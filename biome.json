    "ignoreUnknown": true,
    "includes": ["**"]
  },
  "overrides": [
    {
      "includes": ["src/**/index.ts", "src/**/index.parts.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    }
  ]
}
